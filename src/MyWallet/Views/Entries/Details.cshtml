@model EntryDetailsViewModel
@{
    ViewData["Title"] = Model.EntryTime;
}

<h2>Details</h2>

<div>
    <h4>Entry</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.Amount, "Amount")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt>
            @Html.LabelFor(model => model.AmountInMain, "Amount converted")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AmountInMain)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.LabelFor(model => model.EntryTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EntryTime)
        </dd>
        <dt>
            @Html.LabelFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            @Html.LabelFor(model => model.CategoryNames)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CategoryNames)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Budgets)
        </dt>
        <dd>
            @string.Join(", ", Model.Budgets.Select(x => x.Name))
        </dd>
    </dl>
</div>
<div>
