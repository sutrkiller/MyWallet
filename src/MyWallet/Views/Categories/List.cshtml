@using System.Threading.Tasks
@using MyWallet.Models.Categories
@model Sakura.AspNetCore.IPagedList<CategoryViewModel>


@{
    ViewData["Title"] = "Categories";
}
<div class="form-group col-md-3" style="margin-right: 15px; margin-left: -15px;">
    <br />
    <a asp-action="Create" class="btn btn-success">
        <span class="icon-plus"></span>
        Create new
    </a>
</div>
<div class="form-group col-md-2" style="margin-top: 5px;"></div>
<div class="widget widget-table action-table">
    <div class="widget-header">
        <i class="icon-th-list"></i>
        <h3 class="marginHack">Categories list</h3>
    </div>
    <div class="widget-content">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="td-actions" style="width: 120px;">
                            @using (Html.BeginForm("Delete", "Categories", new { id = item.Id }, FormMethod.Post, true, null))
                            {
                                <a href="@Url.Action("Details", "Categories", new {id = item.Id})" class="btn btn-small btn-default">
                                    <i class="btn-icon-only icon-tasks"></i>
                                </a><a href="@Url.Action("Edit", "Categories", new {id = item.Id})" class="btn btn-small btn-success">
                                    <i class="btn-icon-only icon-pencil"></i>
                                </a><a href="#/" onclick="$(this).closest('form').submit();" id="deleteItem" class="btn btn-small btn-danger">
                                    <i class="btn-icon-only icon-minus"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<pager />