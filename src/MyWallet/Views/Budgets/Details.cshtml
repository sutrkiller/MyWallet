@using System.Threading.Tasks
@using MyWallet.Helpers
@using MyWallet.Models.Budgets
@model MyWallet.Models.Budgets.BudgetDetailsViewModel

@{
    ViewData["Title"] = "Budget - "+Model.Name;
}

<div class="widget widget-table action-table" style="margin-bottom: 0px; padding-top: 10px;">

    <div class="widget-header">
        <i class="icon-tasks"></i>
        <h3 class="marginHack">Budget detail</h3>
        <a asp-action="List" class="btn btn-small btn-default backArrow">
            <i class="btn-icon-only icon-arrow-left marginHackArrows"></i>
        </a>


    </div>
    <div class="widget-content">
        <div class="form-horizontal">
            <div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Name, new { readOnly = "readOnly", @class = "form-control col-md-2", style = "possition-relative: center;" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Description, new { readOnly = "readOnly", @class = "form-control col-md-2", style = "possition-relative: center;" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        <input type="text" value="@Model.Amount.FormatCurrency(Model.Currency)" class="form-control col-md-2" readonly="readonly"/>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.StartDate, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.StartDate, "{0:MM/dd/yyyy}", new { readOnly = "readOnly", @class = "form-control col-md-2", style = "possition-relative: center;" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EndDate, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.EndDate, "{0:MM/dd/yyyy}", new { readOnly = "readOnly", @class = "form-control col-md-2", style = "possition-relative: center;" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Group, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Group.Name, new { readOnly = "readOnly", @class = "form-control col-md-2", style = "possition-relative: center;" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Entries, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => Model.Entries, Model.NumberOfEntries, 1, new { readOnly = "readOnly", @class = "form-control col-md-2", style = "possition-relative: center;" })
                    </div>

                </div>
                </div>
            </div>
        </div>
    </div>



