@using System.Threading.Tasks
@using MyWallet.Models.Groups
@model IEnumerable<GroupViewModel>

@{
    ViewData["Title"] = "Groups";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @string.Join(", ", @item.Users.Select(x => x.Name))
                </td>
                <td>
                <td>
                    @using (Html.BeginForm("Delete", "Groups", new { id = item.Id }, FormMethod.Post, true, null))
                    {
                        <input type="button" style="border: 0; padding: 0; padding-right: 5px" class="btn-link" value="Details" onclick="location.href = '@Url.Action("Details", "Groups", new { id = item.Id })'" />
                        <span> |</span>
                        <input type="button" style="border: 0; padding: 0; padding-left: 5px;" class="btn-link" value="Edit" onclick="location.href = '@Url.Action("Edit", "Groups", new { id = item.Id })'" />
                        <span> |</span>
                        <input type="submit" style="border: 0; padding: 0; padding-left: 5px;" class="btn-link" value="Delete" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>