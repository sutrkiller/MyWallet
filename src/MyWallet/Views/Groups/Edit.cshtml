@model MyWallet.Models.Groups.CreateGroupViewModel

@{
    ViewData["Edit"] = "Edit";
}

<div class="widget widget-table action-table" style="margin-bottom: 0px; padding-top: 10px;">

    <div class="widget-header">
        <i class="icon-tasks"></i>
        <h3 class="marginHack">Edit category</h3>
        <a asp-action="List" class="btn btn-small btn-default backArrow">
            <i class="btn-icon-only icon-arrow-left marginHackArrows"></i>
        </a>


    </div>
    <div class="widget-content">
        <br />

        <form asp-action="Edit">
            <div class="form-horizontal">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UserIds" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="UserIds" asp-items="@Model.UsersList" class="form-control multiselectUsers"></select>
                        <span asp-validation-for="UserIds" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />

                    </div>

                </div>

            </div>

        </form>

    </div>
</div>

@section scripts {

    <script type="text/javascript" src="~/lib/bootstrap-multiselect/dist/js/bootstrap-multiselect.js"></script>
    <script type="text/javascript">
        $('.multiselectUsers').multiselect();

    </script>
}
