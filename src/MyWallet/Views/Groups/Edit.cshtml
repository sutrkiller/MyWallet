@model MyWallet.Models.Groups.CreateGroupViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "_Layout";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Group</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserIds" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="UserIds" asp-items="@Model.UsersList" class="form-control"></select>
                <span asp-validation-for="UserIds" class="text-danger"></span>

            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />

            </div>

        </div>

    </div>

</form>

