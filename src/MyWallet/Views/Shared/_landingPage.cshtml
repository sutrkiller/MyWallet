<script>
    var current = 1, max = 3;
    var body = document.getElementsByTagName("body")[0];
    body.addEventListener("load", startTimer(), false);

    function displayImage() {
        current = current === max ? 1 : current + 1;
        var previous = (current === 1 ? 3 : current - 1);

        if (document.getElementById("image" + current) == null) {
            return;
        }

        document.getElementById("image" + previous).style.display = 'none';
        document.getElementById("image" + current).style.display = '';
    }

    function startTimer() {
        setInterval(displayImage, 5000);
    }
</script>